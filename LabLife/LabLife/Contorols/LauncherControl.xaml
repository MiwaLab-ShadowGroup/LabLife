<UserControl x:Class="LabLife.Contorols.LauncherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabLife.Contorols"
             mc:Ignorable="d" >
    <Border x:Name="Border_Main" BorderThickness="5" BorderBrush="Black">
            <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="5" Grid.Column="0" x:Name="TextBlock_Title" MinWidth="200"/>
            <Button Margin="5" Grid.Column="1" x:Name="Button_Start" Content="Start" Click="Button_Start_Click"/>
            <Button Margin="5" Grid.Column="2" x:Name="Button_Kill" Content="Kill" Click="Button_Kill_Click"/>
        </Grid>
    </Border>
</UserControl>
